@import 'nib'

global-reset()

highlight = #999
lowlight  = #555

body
  background linear-gradient(top, white, #efefef)
  overflow hidden

h1
  font-family 'Lemon', cursive
  width 100%
  text-align center
  font-size  35em
  absolute top 10% left 0
  color white
  text-shadow 0 -1px #eee, 0 1px 0 #ddd
  margin-left -2%

p
  position fixed
  color #333
  font-family 'Philosopher', sans-serif
  &.name.reason
    bottom 4em
    left   5%
    .definition
      color #222
      font-weight bold
  &.capitalization.backstory
    bottom 2.625em
    right  5%
    a
      text-decoration none
      font-style oblique
      color #111

#aioim
  position: fixed
  top   0
  left  -.5em
  right -.5em
  height 2em
  background linear-gradient(top, #FFD65E, #A66B1F)
  box-shadow 0 5px 10px #A66B1F
  .hidden
    display none
  .first.steps
    absolute top 0 left 7em
    line-height 2em
    li
      display inline-block
      width 10em
      padding-left 1em
      font-family 'Pontano Sans', sans-serif
      color rgba(black, .5)
      &.active
        color black
        text-shadow 0 -1px #FFD65E, 0 1px 0 #A66B1F
      &.completed
        color transparent
        text-shadow 0 -1px 2px transparent, 0 1px 2px transparent
  .user.search
    absolute top 0 left 1.5em
    .name
      font-size 1em
      height 1.45em
      width  8em
      margin  .125em
      padding 0 .25em
      font-family 'Pontano Sans', sans-serif
      background-color #A66B1F
      border none
      color #FFB95E
      box-shadow  0 1px 2px rgba(192, 192, 192, .7), 0 -1px 2px rgba(8, 8, 8, .7)
      margin-top    .325em
      margin-left   .25em
      border-radius .125em
  .chattable.users
    absolute top 2.5em left .725em
    border-radius .25em
    border 3px solid highlight
    background-color #eee
    box-shadow 0 3px 15px black
    z-index 1000
    li.name
      padding .375em
      border-bottom 1px solid #ddd
      border-top    1px solid white
      border-left   1px solid #ccc
      border-right  1px solid #ccc
      background-color rgba(#eee, .9)
      color highlight
      width 20em
      &:hover
        cursor pointer
        background-color #81BEE9
        color #569FD3
        border 1px solid #81BEE9
        box-shadow inset 0 1px 3px #1C5C89
        .screen
          color #1C5C89
          text-shadow 0 1px 0 #9DCAE9
      .screen
        font-family 'Pontano Sans', sans-serif
        color #666
        text-shadow 0 1px 0 white
        display inline-block
        width 50%
      .human
        font-family 'Philosopher', sans-serif
  .chatting.with
    position fixed
    top    0
    left   9em
    right  0
    bottom 3.5em
    > li
      display inline-block
      width 19.2em
      margin-right 1em
      vertical-align top
      height 100%
      .human.name
        width  13.37em // hawt
        height 1.3em
        font-size   1.5em
        line-height 1.2em
        text-align center
        font-family 'Lemon', cursive
        color black
        text-shadow 0 -1px #FFD65E, 0 1px 0 #A66B1F
        cursor pointer
      .messages
        margin-top .5em
        border-top   3px solid #81BEE9
        border-left  3px solid #81BEE9
        border-right 3px solid #81BEE9
        border-top-left-radius  .25em
        border-top-right-radius .25em
        background linear-gradient(top, #58819E, #1C5C89)
        box-shadow inset 0 2px 5px rgba(black, .5), 0 5px 10px #1C5C89
        font-family 'Philosopher', sans-serif
        color #333
        width 18.85em
        height 80%
        overflow-x scroll
        padding-bottom .1em
        .quote
          position absolute
          bottom 14%
          width 11.55em
          font-size 1.5em
          background-color transparent
          border none
          box-shadow none !important
          z-index 0
          p
            absolute bottom, left
            padding .5em
            color #BFA865
            text-shadow 0 1px 1px rgba(255, 255, 255, .5), 0 -1px 1px #333
        li
          width 15em
          text-shadow 0 1px 0 white
          padding .25em .5em
          border-bottom 1px solid #aaa
          border-top    1px solid white
          border-left   1px solid #bbb
          border-right  1px solid #bbb
          background-color #eee
          z-index 100
          position relative
          &:first-child
            border-top-left-radius  .125em
            border-top-right-radius .125em
          &:last-child
            border-bottom none
            box-shadow 0 2px 5px rgba(black, .5)
          &.self
            padding-left 4em
            color #999
            width 14.2em
            text-shadow none
          &.other
            width 17.7em
      .new.message
        border-left   3px solid #81BEE9
        border-right  3px solid #81BEE9
        border-bottom 3px solid #81BEE9
        border-bottom-left-radius  .375em
        border-bottom-right-radius .375em
        background-color white
        box-shadow 0 5px 10px #1C5C89
        input
          border-bottom-left-radius .5em
          width 23.5em
          border none
          margin-left .6em
          font-family 'Pontano Sans', sans-serif
          letter-spacing 1px
          &:focus
            outline none
        button
          background-color white
          border none
          font-family 'Pontano Sans', sans-serif
          letter-spacing 1px
          border-left 1px solid #ddd
  .sign.in
    absolute top .4em left 1.5em
    padding .5em 1.5em
    background linear-gradient(top, #666, #222)
    text-shadow 0 -1px 0 #222
    color white
    font-family 'Pontano Sans', sans-serif
    text-decoration none
    letter-spacing 1px
    line-height 1em
    height 1em
    box-shadow 0 -1px 2px #aaa, 0 1px 2px #111
    font-size .75em
    border-radius .25em

